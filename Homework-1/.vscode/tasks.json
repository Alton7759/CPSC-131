{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All with g++ (Debug)",
            "type": "shell",
            "options": {
                "env": {
                    "Compiler": "g++",
                    "Options": "-g3 -O0",
                    "Executable": "${workspaceFolder}/project.exe",
                    "CPATH": ":${workspaceFolder}"
                }
            },
            "command": ".vscode/Build_vsc.sh",
            "args": [
                "Build All with g++ (Debug)"
            ],
            "group": "build",
            "presentation": {
                "clear": true,
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": "$gcc"
        },
